{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": "./src",
		"paths": {
			"@/*": ["*"]
		},
		"checkJs": false,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"isolatedModules": true,
		"jsx": "react",
		"lib": ["DOM", "ESNext"],
		"moduleResolution": "node",
		"target": "ES2020",
		"noEmit": true,
		"skipLibCheck": true,
		"strict": true
	},
	"exclude": ["./public"]
}
